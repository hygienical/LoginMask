{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% set gCapture = config("Ceres.global.google_recaptcha_api_key") %}

<script type="x/template" id="vue-login">  
    <div class="login-pwd-reset">
        <form :id="'login-form-' + _uid" method="post" class="login-container">
            <div :class="{'modal-body': modalElement}">
                <div class="row">
                    <div class="col-12">
                        <div class="input-unit" data-validate="mail">
                            <input type="email" name="email" autocomplete="email" :id="'email' + _uid" v-model="username" data-autofocus>
                            <label :for="'email' + _uid">{{ trans("Ceres::Template.loginEmail") }}*</label>
                        </div>
                        <span class="error-msg">{{ trans("Ceres::Template.loginEnterConfirmEmail") }}</span>
                    </div>
                    <div class="col-12">
                        <div class="input-unit" :class="{'no-bottom': modalElement}" data-validate="text">
                            <input type="password" name="password" autocomplete="current-password" :id="'password' + _uid" v-model="password">
                            <label :for="'password' + _uid">{{ trans("Ceres::Template.loginPassword") }}*</label>
                        </div>
                        <span class="error-msg">{{ trans("Ceres::Template.loginEmptyPassword") }}</span>
                    </div>
                </div>
            </div>
            <div :class="{'modal-footer justify-content-between px-2': modalElement, 'row': !modalElement}">
                <div class="col-6 pl-2" :class="{'col-12': !modalElement}">
                    <a href="javascript:void(0)" @click="showResetPwdView" class="text-appearance">{{ trans("Ceres::Template.loginForgotPassword") }}?</a>
                </div>
                <div class="col-6" :class="{'col-12': !modalElement}">
                    {{ LayoutContainer.show("Ceres::LoginOverlay.ExtendOverlayButtons") }}
                    <button @click.prevent="validateLogin" :disabled="isDisabled" class="btn btn-primary btn-block btn-appearance" :class="{'btn btn-primary btn-lg btn-block btn-appearance mt-3': !modalElement}">
                        <i class="fa fa-user" v-waiting-animation="isDisabled"></i>
                        {{ trans("Ceres::Template.login") }}
                    </button>
                </div>
            </div>
        </form>
    </div>
</script>
